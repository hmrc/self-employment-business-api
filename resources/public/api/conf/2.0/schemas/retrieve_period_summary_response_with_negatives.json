{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Retrieve Self-Employment Period Summary",
  "description": "Retrieves a self-employment period summary.",
  "type": "object",
  "properties": {
    "periodDates": {
      "$ref": "periodSummary/period_dates.json"
    },
    "periodIncome": {
      "$ref": "periodSummary/period_income.json"
    },
    "periodExpenses": {
      "$ref": "periodSummary/period_expenses_with_negatives.json"
    },
    "periodDisallowableExpenses": {
      "$ref": "periodSummary/period_disallowable_expenses_with_negatives.json"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource.",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint.",
            "type": "string",
            "example": "/individuals/business/self-employment/{nino}/{businessId}/period/{periodId}"
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource.",
            "type": "string",
            "enum": [
              "self",
              "amend-self-employment-period-summary",
              "list-self-employment-period-summaries"
            ]
          },
          "method": {
            "description": "The HTTP method type for the endpoint.",
            "type": "string",
            "enum": [
              "GET",
              "PUT"
            ]
          }
        },
        "required": [
          "href",
          "rel",
          "method"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "periodDates"
  ],
  "additionalProperties": false
}